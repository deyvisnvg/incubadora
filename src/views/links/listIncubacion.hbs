<section class="list-data">
    <div class="state">REGISTRO DE INCUBACIÓN</div>
    {{#if message }}
        <div class="messageError">{{ message }}</div>
    {{/if}}

    {{#if success }}
        <div class="messageSuccess">{{ success }}</div>
    {{/if}}
    <div class="list-cuerpo">
        <div class="addBoton">
            <p class="boton">
                <a href="/incubadora/incubacion/add">
                    <strong> <i class="icon-plus"></i> Incubación</strong>
                </a>
            </p>
        </div>
        <div class="data-table-pagination">
            <table id="example1" class="data-table table-hover table-bordered">
                <thead>
                    <tr>
                        <th><p class="description">Pedido</p></th>
                        <th><p class="description">Cantidad Huevos</p></th>
                        <th><p class="description">Fecha Registrada</p></th>
                        <th><p class="description">Hora Registrada</p></th>
                        <th><p class="description">Nº Incubaciones Registradas</p></th>
                        <th><p class="description">Editar</p></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data.dataIncubacion}}
                    <tr>
                        <td><p class="description">{{id_pedido}}</p></td>
                        <td><p class="description">{{'pedido.cantidad'}}</p></td>
                        <td><p class="description">{{'pedido.fecha_pedido'}}</p></td>
                        <td><p class="description">{{'pedido.hora_pedido'}}</p></td>
                        <td><p class="description">{{n_incubacion}}</p></td>
                        <td>
                            <p class="description">
                                <a href="/incubadora/incubacion/view/{{id_pedido}}"> 
                                    <i class="icon-file-text icono" title="Visualizar Incubaciones"></i> 
                                </a>
                            </p>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>