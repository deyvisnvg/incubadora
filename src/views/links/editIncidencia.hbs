<input type="hidden" name="modulo" id="moduloUser" value="{{user.modulo}}">

<section class="registro-data">
    <div class="state"><a href="/incubadora/incidencia/list/{{data.ids.id_incubacion}}&{{data.ids.id_pedido}}"><i class="icon-arrow-left2 positionIcon"></i></a>EDITAR DE INCIDENCIA</div>
    <div class="data">
        <form action="/incubadora/incidencia/update/{{data.ids.id_incubacion}}&{{data.ids.id_pedido}}" method="post">
            {{!-- <input type="hidden" name="id_incubacion" value="{{data.ids.id_incubacion}}">
            <input type="hidden" name="id_pedido" value="{{data.ids.id_pedido}}"> --}}
            {{#with data.dataIncidencia}}
            <div class="data-valor1">
                <p class="description">Identificador: </p>
                <p>
                    <input type="text" name="identificador" id="" value="{{id_incidencias}}" readonly>
                </p>
            </div>
            <div class="data-valor1">
                <p class="description">Detalle Incidencia: </p>
                <p><textarea name="detalle_incidencia" id="" cols="22" rows="4">{{descripcion}}</textarea></p>
            </div>
            <div class="data-valor1">
                <p class="description">Cantidad de Nacidos: </p>
                <p><input type="text" name="cantidad_nacidos" value="{{cantidad_nacidos}}" required pattern="[0-9]+" title="Ingrese solo números"></p>
            </div>

            <div class="data-valor1">
                <p class="description">Cantidad de Defectuosos: </p>
                <p><input type="text" name="cantidad_defectuosos" value="{{cantidad_defectuosos}}" required pattern="[0-9]+" title="Ingrese solo números"></p>
            </div>
            
            <div class="data-boton">
                <p class="boton"><button type="submit">Registrar</button></p>
            </div>
            {{/with}}
        </form>
    </div>
</section>