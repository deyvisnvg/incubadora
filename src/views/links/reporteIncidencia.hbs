<section class="list-data">
    <div class="state">REPORTE INCIDENCIAS</div>
    {{#if message }}
        <div class="messageError">{{ message }}</div>
    {{/if}}

    {{#if success }}
        <div class="messageSuccess">{{ success }}</div>
    {{/if}}

    <form action="/reporte/incidencia" method="POST">
        <div class="list-cuerpo">
            <div class="filtros">
                <div class="filtro">
                    <p>Incubadora:</p>
                    <p>
                        <select id="selectBuscador3" name="incubadora">
                            <option value="">Seleccione...</option>
                            {{#each data.dataIncubadora}}
                            <option value="{{id_incubadora}}">{{nombre_incubadora}}</option>
                            {{/each}}
                        </select>
                    </p>
                </div>
                <div class="filtro">
                    <p>Desde:</p>
                    <p>
                        <input type="date" name="fechaInicio" id="fechaInicio" value="">
                    </p>
                </div>
                <div class="filtro">
                    <p>Hasta:</p>
                    <p>
                        <div id="result"></div>
                    </p>
                </div>
            </div>
            <div class="botonFiltro">
                <button type="submit"><strong> Buscar</strong></button>
                <a href="/reporte/exportar"> Generar Reporte</a>
            </div>
            <div class="data-table-pagination">
                <table id="example1" class="data-table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th><p class="description-name">incubadora</p></th>
                            <th><p class="description">cantidad ingreso</p></th>
                            <th><p class="description">CANT PERDIDA</p></th>
                            <th><p class="description">INCIDENCIA</p></th>
                            <th><p class="description">ESTADO</p></th>
                            <th><p class="description">FECHA REG INCIDENCIA</p></th>
                            <th><p class="description">USUARIO Q REPORTA</p></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each data.dataFinal}}
                        <tr>
                            <td><p class="description-valor">{{nombre_incubadora}}</p></td>
                            <td><p class="description-valor">{{cantidad_ingreso}}</p></td>
                            <td><p class="description-valor">{{cantidad_defectuosos}}</p></td>
                            <td><p class="description">{{descripcion}}</p></td>
                            <td><p class="description">{{estado}}</p></td>
                            <td><p class="description-valor">{{fecha_registrada}}</p></td>
                            <td><p class="description-valor">{{usuario}}</p></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </form>
</section>