<section class="list-data">
    <div class="state">REGISTRO DE TIPO DE SENSORES</div>
    {{#if message }}
        <div class="messageError">{{ message }}</div>
    {{/if}}

    {{#if success }}
        <div class="messageSuccess">{{ success }}</div>
    {{/if}}
    <div class="list-cuerpo">
        <div class="addBoton">
            <p class="boton">
                <a href="/sensores/tipoSensor/add">
                    <strong> <i class="icon-plus"></i> Tipo Sensor</strong>
                </a>
            </p>
        </div>
        <div class="data-table-pagination">
            <table id="example1" class="data-table table-hover table-bordered">
                <thead>
                    <tr>
                        <th><p class="description">id</p></th>
                        <th><p class="description">Tipo de Sensor</p></th>
                        <th><p class="description">Simbolo</p></th>
                        <th><p class="description">limite</p></th>
                        <th><p class="description">Ambiente</p></th>
                        <th><p class="description">Editar</p></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr>
                        <td><p class="description">{{id_tipoSensor}}</p></td>
                        <td><p class="description">{{tipo_sensor}}</p></td>
                        <td><p class="description">{{simbolo}}</p></td>
                        <td><p class="description">{{limite}}</p></td>
                        <td><p class="description">{{ambiente}}</p></td>
                        <td>
                            <p class="description"><a href="/usuario/edit/{{id_persona}} {{id_usuario}}"><img
                            src="/img/editar.png" alt="icon de Editar"></a></p>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>