<input type="hidden" name="modulo" id="moduloUser" value="{{user.modulo}}">

<section class="registro-data">
    <div class="state">REGISTRO DE SENSORES</div>
    <div class="data">
        <form action="/usuario/add" method="post">
            <div class="data-valor1">
                <p class="description">Nombre de Sensor: </p>
                <p><input type="text" name="nombre_sensor" value="" required pattern="[A-Za-z0-9]+"
                        title="Ingrese solo letras Mayúsculas, minúsculas y números sin espacios"></p>
            </div>
            <div class="data-valor1">
                <p class="description">Estado:</p>
                <p>
                    <select name="estado" required>
                        <option value="">Seleccione...</option>
                        <option value="Activo">Activo</option>
                        <option value="Inactivo">Inactivo</option>
                    </select>
                </p>
            </div>
            <div class="data-valor1">
                <p class="description">Incubadora: </p>
                <p>
                    <select name="incubadora" required>
                        <option value="">Seleccione...</option>
                    </select>
                </p>
            </div>
            <div class="data-valor1">
                <p class="description">Tipo Sensor: </p>
                <p>
                    <select name="tipo_sensor" required>
                        <option value="">Seleccione...</option>
                    </select>
                </p>
            </div>

            <div class="data-boton">
                <p class="boton"><button type="submit">Registrar</button></p>
            </div>

            {{#if message }}
            <div class="messageError">{{ message }}</div>
            {{/if}}

            {{#if success }}
            <div class="messageSuccess">{{ success }}</div>
            {{/if}}
        </form>
    </div>
</section>