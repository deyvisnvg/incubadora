<section class="list-data">
    <div class="state">REGISTRO DE PEDIDOS</div>
    {{#if message }}
        <div class="messageError">{{ message }}</div>
    {{/if}}

    {{#if success }}
        <div class="messageSuccess">{{ success }}</div>
    {{/if}}
    <div class="list-cuerpo">
        <div class="addBoton">
            <p class="boton">
                <a href="/pedido/add">
                    <strong> <i class="icon-plus"></i> Pedido</strong>
                </a>
            </p>
        </div>
        <div class="data-table-pagination">
            <table id="example1" class="data-table table-hover table-bordered">
                <thead>
                    <tr>
                        <th><p class="description-name">Responsabe Pedido</p></th>
                        <th><p class="description">Cantidad Pedido</p></th>
                        <th><p class="description">Fecha de Pedido</p></th>
                        <th><p class="description">Hora Pedido</p></th>
                        <th><p class="description"></p>Fecha de Entrega</th>
                        <th><p class="description">Editar </p></th>
                    </tr>
                </thead>
                <tbody>
                    {{!-- {{#each data}} --}}
                    <tr>
                        <td><p class="description-valor">{{dni_persona}}</p></td>
                        <td><p class="description">mi cantidad</p></td>
                        <td><p class="description">mi fecha</p></td>
                        <td><p class="description">mi hora</p></td>
                        <td><p class="description">mi entrega</p></td>
                        <td>
                            <p class="description"><a href="/usuario/edit/{{id_persona}} {{id_usuario}}"><img
                            src="/img/editar.png" alt="icon de Editar"></a></p>
                        </td>
                    </tr>
                    {{!-- {{/each}} --}}
                </tbody>
            </table>
        </div>
    </div>
</section>