<section class="list-data">
    <div class="state">REGISTRO DE PEDIDOS</div>
    {{#if message }}
        <div class="messageError">{{ message }}</div>
    {{/if}}

    {{#if success }}
        <div class="messageSuccess">{{ success }}</div>
    {{/if}}
    <div class="list-cuerpo">
        <div class="addBoton">
            <p class="boton">
                <a href="/pedido/add">
                    <strong> <i class="icon-plus"></i> Pedido</strong>
                </a>
            </p>
        </div>
        <div class="data-table-pagination">
            <table id="example1" class="data-table table-hover table-bordered">
                <thead>
                    <tr>
                        <th><p class="description">Id_pedido</p></th>
                        <th><p class="description-name">Cantidad</p></th>
                        <th><p class="description">Fecha Pedido</p></th>
                        <th><p class="description">Fecha Entrega</p></th>
                        {{!-- <th><p class="description">Estado</p></th> --}}
                        <th><p class="description">Representante</p></th>
                        <th><p class="description">Empresa</p></th>
                        <th><p class="description">Visualizar </p></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr>
                        <td><p class="description">{{id_pedido}}</p></td>
                        <td><p class="description-valor">{{cantidad}}</p></td>
                        <td><p class="description">{{fecha_pedido}}</p></td>
                        <td><p class="description">{{fecha_entrega}}</p></td>
                        {{!-- <td><p class="description">{{estado}}</p></td> --}}
                        <td><p class="description">{{'representante_empresa.representante.persona.nombres'}} {{'representante_empresa.representante.persona.apellidos'}}</p></td>
                        <td><p class="description">{{'representante_empresa.empresa.nombre_empresa'}}</p></td>
                        <td>
                            <p class="description">
                                <a href="/pedido/edit/{{id_pedido}}&{{'representante_empresa.id_representante'}}&{{'representante_empresa.id_empresa'}}"> 
                                    <i class="icon-file-text icono" title="Visualizar Pedidos"></i> 
                                </a>
                            </p>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>