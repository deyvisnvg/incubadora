<input type="hidden" name="modulo" id="moduloUser" value="{{user.modulo}}">

<section class="registro-data">
    <div class="state">REGISTRO DE PEDIDOS</div>
    <div class="data">
        <form action="/usuario/add" method="post">
            <div class="data-valor1">
                <p class="description">Identificador: </p>
                <p><input type="text" name="identificador" value="Se genera automático" readonly></p>
            </div>
            <div class="data-valor1">
                <p class="description">Cantidad Pedido: </p>
                <p><input type="text" name="cantidad_pedido" value="" required pattern="[0-9]+" title="Ingrese solo números"></p>
            </div>
            <div class="data-valor1">
                <p class="description">Comentario: </p>
                <p><textarea name="" id="" cols="22" rows="4"></textarea></p>
            </div>
            <div class="data-valor1">
                <p class="description">Fecha Pedido: </p>
                <p><input type="date" name="fecha_pedido" value="" required></p>
            </div>
            <div class="data-valor1">
                <p class="description">Hora Pedido: </p>
                <p><input type="text" name="hora_pedido" value="" required></p>
            </div>
            <div class="data-valor1">
                <p class="description">Fecha Entrega: </p>
                <p><input type="date" name="fecha_entrega" value="" required></p>
            </div>
            <div class="data-valor1">
                <p class="description">Representante Legal: </p>
                <p>
                    <select name="estado" required>
                        <option value="">Seleccione...</option>
                    </select>
                </p>
            </div>
            
            <div class="data-boton">
                <p class="boton"><button type="submit">Registrar</button></p>
            </div>

            {{#if message }}
            <div class="messageError">{{ message }}</div>
            {{/if}}

            {{#if success }}
            <div class="messageSuccess">{{ success }}</div>
            {{/if}}
        </form>
    </div>
</section>