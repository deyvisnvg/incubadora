<input type="hidden" name="modulo" id="moduloUser" value="{{user.modulo}}">

<section class="registro-data">
    <div class="state"><a href="/incubadora/incidencia/list/{{ids.id_incubacion}}&{{ids.id_pedido}}"><i class="icon-arrow-left2 positionIcon"></i></a>REGISTRO DE INCIDENCIAS</div>
    {{#if message }}
        <div class="messageError">{{ message }}</div>
    {{/if}}

    {{#if success }}
        <div class="messageSuccess">{{ success }}</div>
    {{/if}}
    <div class="data">
        <form action="/incubadora/incidencia/add" method="post">
            <input type="hidden" name="id_incubacion" value="{{ids.id_incubacion}}">
            <input type="hidden" name="id_pedido" value="{{ids.id_pedido}}">
            <div class="data-valor1">
                <p class="description">Identificador: </p>
                <p>
                    <input type="hidden" id="valor" value="incidencia">
                    <input type="text" name="identificador" id="idIncidencia" value="" readonly>
                </p>
            </div>
            <div class="data-valor1">
                <p class="description">Detalle Incidencia: </p>
                <p><textarea name="detalle_incidencia" id="" cols="22" rows="4"></textarea></p>
            </div>
            <div class="data-valor1">
                <p class="description">Cantidad de Nacidos: </p>
                <p><input type="text" name="cantidad_nacidos" value="" required pattern="[0-9]+" title="Ingrese solo números"></p>
            </div>

            <div class="data-valor1">
                <p class="description">Cantidad de Defectuosos: </p>
                <p><input type="text" name="cantidad_defectuosos" value="" required pattern="[0-9]+" title="Ingrese solo números"></p>
            </div>
            
            <div class="data-boton">
                <p class="boton"><button type="submit">Registrar</button></p>
            </div>

        </form>
    </div>
</section>